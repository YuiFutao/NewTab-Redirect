{
  "manifest_version": 2,
  "name": "colors-of-the-day",
  "short_name": "CotD",
  "description": "曜日を連想させる写真を新しいタブに表示します",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "main.html"
  },
  "permissions": [
    "storage",
    "chrome://favicon/"
  ],
  "optional_permissions": [
    "tabs",
    "topSites",
    "management",
    "bookmarks"
  ],
  "icons": {
    "200": "images/icon200.png",
    "128": "images/icon128.png",
    "19": "images/icon19.png"
  },
  "incognito": "split",
  "minimum_chrome_version": "22"
}
